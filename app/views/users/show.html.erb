<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/user_info.html.erb',user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th colspan="1">
          <th>Title</th>
          <th>Opinion</th>
        </tr>
          <% @books.each do |book| %>
            <tr>
              <th><%= link_to image_tag(@user.get_profile_image(100,100)), user_path(@user.id) %></th>
              <th><%= link_to book.title,book_path(book.id) %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
